<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Twinkle TODO</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <style>
        .admin-badge {
            background-color: #974e76;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            margin-left: 5px;
        }

        .dashboard-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .dashboard-table th,
        .dashboard-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .dashboard-table th {
            background-color: #d87093;
            color: white;
            font-weight: bold;
        }

        .dashboard-table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .action-btn {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
            margin-right: 5px;
        }

        .edit-btn {
            background-color: #d87093;
            color: white;
        }

        .delete-btn {
            background-color: #974e76;
            color: white;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <div id="viewport">
        <div id="sidebar">
            <header>
                <a asp-action="AdminDashboard" asp-controller="Home">TWINKLE TO-DO</a>
            </header>
            <ul class="nav">
                <a asp-action="AdminDashboard" asp-controller="Home">
                    <li>Dashboard</li>
                </a>
                <a asp-action="Users" asp-controller="Admin">
                    <li>Manage Users</li>
                </a>
                <a asp-action="Tasks" asp-controller="Admin">
                    <li>Manage Tasks</li>
                </a>
                <a asp-action="Logout" asp-controller="Home">
                    <li>Logout</li>
                </a>
            </ul>
        </div>
        <div id="content">
            <div class="container-fluid">
                <header>
                    <div class="top-header">
                        <div class="header-logo">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                        <div class="welcome-bar">
                            <h3>@User.Identity.Name <span class="admin-badge">Admin</span></h3>
                        </div>
                    </div>
                </header>

                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>