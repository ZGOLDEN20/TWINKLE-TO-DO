<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Twinkle TODO</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap"
        rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <div id="viewport">
        <div id="sidebar">
            <header>
                <a asp-action="Dashboard" asp-controller="Home">TWINKLE TO-DO</a>
            </header>
            <ul class="nav">
                <a asp-action="Dashboard" asp-controller="Home">
                    <li>Dashboard</li>
                </a>
                <a asp-action="Task" asp-controller="Home">
                    <li>Tasks</li>
                </a>
                <a asp-action="Profile" asp-controller="Home">
                    <li>Profile</li>
                </a>
                <a asp-action="Logout" asp-controller="Home">
                    <li>Logout</li>
                </a>
            </ul>
        </div>
        <div id="content">
            <div class="container-fluid">
                <header>
                    <div class="top-header">
                        <div class="header-logo">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                        <div class="welcome-bar">
                            <h3>@User.Identity.Name</h3>
                        </div>
                    </div>
                </header>

                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>